@model TTS.Lib.ViewModels.Admin.BannerViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    string img = Model != null ? Model.ImageURL : "http://placehold.it/200x200";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i>Banner                
            </div>
            <div class="card-block">

                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="form-horizontal">
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />                        
                        <input type="hidden" asp-for="Specificulture" />                        
                        <div class="form-check">
                            @for (int i = 0; i < Model.ListSupportedCulture.Count; i++)
                            {
                                <label class="form-check-label">
                                    <input type="checkbox" asp-for="@Model.ListSupportedCulture[i].IsSupported" />
                                    <input type="hidden" asp-for="@Model.ListSupportedCulture[i].Specificulture"/>
                                    <i class="flag-icon @Model.ListSupportedCulture[i].Icon"></i> @Model.ListSupportedCulture[i].Specificulture
                                </label>
                            }
                        </div>
                        <div class="form-group">
                            <label asp-for="Url" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Url" class="form-control" />
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Alias" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Alias" class="form-control" />
                                <span asp-validation-for="Alias" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <input type="hidden" asp-for="Image"/>
                            <label asp-for="Image" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <label class="custom-file">
                                    <img src="@img" class="custom-file-img form-control" />
                                    <input type="file" name="pic" class="custom-file-input">                                                                        
                                    <span class="custom-file-control">Browse</span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            
                            <div class="col-md-10">
                                
                                <input asp-for="IsPublished" type="checkbox" class="" />                
                                <label asp-for="IsPublished" class="control-label"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </form>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
